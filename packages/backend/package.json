{
  "name": "@giancosta86/ulysses",
  "version": "2.1.2",
  "description": "Simplified generation of OmniCourse descriptors",
  "bin": {
    "ulysses": "dist/bin/ulysses.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "start": "yarn wait-for-frontend && cross-env DEBUG=server,server:* NODE_ENV=development nodemon",
    "wait-for-frontend": "wait-on --delay 3000 --interval 1000 http://localhost:3000/",
    "check-all": "yarn test",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "build": "tsc"
  },
  "author": {
    "name": "Gianluca Costa",
    "url": "https://gianlucacosta.info/",
    "email": "gianluca@gianlucacosta.info"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giancosta86/ulysses.git"
  },
  "homepage": "https://github.com/giancosta86/ulysses#readme",
  "bugs": {
    "url": "https://github.com/giancosta86/ulysses/issues"
  },
  "keywords": [
    "OmniCourse",
    "descriptors",
    "automated",
    "simplified",
    "generation",
    "app"
  ],
  "dependencies": {
    "@giancosta86/typed-env": "^1.0.0",
    "cross-fetch": "^3.0.6",
    "debug": "^4.2.0",
    "express": "^4.17.1",
    "he": "^1.2.0",
    "open": "^7.3.0",
    "socket.io": "^3.0.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.9",
    "@types/he": "^1.1.1",
    "@types/jest": "^26.0.19",
    "@types/socket.io": "^2.1.11",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "jest": "^26.6.3",
    "moq.ts": "^6.4.0",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "supports-color": "^8.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.8.0",
    "typescript": "^4.0.5",
    "wait-on": "^5.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
